generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma" // default to /node_modules/prisma_client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id      Int      @id @default(autoincrement())
  name    String
  price   Float
  coupons coupon[]
}

model coupon {
  id        Int      @id @default(autoincrement())
  type      String // "product-wise"
  productid Int
  discount  Float // percentage discount, e.g., 20.0 for 20%
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product product @relation(fields: [productid], references: [id])
}

model cartitem {
  id        Int   @id @default(autoincrement())
  productid Int
  quantity  Int
  price     Float // unit price at time of adding to cart
}
